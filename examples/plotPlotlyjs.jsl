};

var plot_layout = {
  title: {},
  autosize: true,
  plot_bgcolor: "#fff",
  paper_bgcolor: "#fff",
  showlegend: true,
  legend: {
    x: 0.98,
    xanchor: 'right',
    y: 0.98,
    bgcolor: '#fff',
    bordercolor: '#000',
    borderwidth: 1,
    borderpad: 10
  },
  font: {
    family: 'Roboto',
    size: 18
  },
  margin: {
    l: 60,
    r: 15,
    b: 60,
    t: 15,
    pad: 5
  },
  xaxis: {
    showgrid: true,
    zeroline: false,
    showline: true,
    automargin: true,
    mirror: 'ticks',
    ticks: 'inside',
    ticklen: 8,
    tickwidth: 0.5,
    tickcolor: '#000',
    linecolor: '#000',
    linewidth: 0.5
  },
  yaxis: {
    showgrid: true,
    zeroline: false,
    showline: true,
    automargin: true,
    mirror: 'ticks',
    ticks: 'inside',
    ticklen: 8,
    tickwidth: 0.5,
    tickcolor: '#000',
    linecolor: '#000',
    linewidth: 0.5,
    title: {
      text: 'yaxis1 title',
    }
  },
  yaxis2: {
    showgrid: true,
    zeroline: false,
